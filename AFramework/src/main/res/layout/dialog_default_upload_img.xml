<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical"
    android:padding="@dimen/padding_big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_solid_white_5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_upload_from_camera"
            style="@style/SimpleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:text="@string/upload_camera" />

        <View style="@style/HorizontalLine" />

        <TextView
            android:id="@+id/tv_upload_from_album"
            style="@style/SimpleTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:text="@string/upload_album" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_upload_cancel"
        style="@style/SimpleTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_normal"
        android:layout_marginTop="@dimen/padding_big"
        android:background="@drawable/shape_solid_white_5dp"
        android:paddingLeft="@dimen/padding_big"
        android:paddingRight="@dimen/padding_big"
        android:text="@string/upload_cancel" />

</LinearLayout>