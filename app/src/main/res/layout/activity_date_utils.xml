<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="DateUtils(12小时制)" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_1"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_2"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_3"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_4"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_5"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time1_6"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />
        </LinearLayout>

        <View style="@style/VerticalLine" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_big"
                android:text="MyDateUtils(24小时制)" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_1"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_2"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_3"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_4"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_5"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />

            <TextView
                android:id="@+id/tv_time2_6"
                style="@style/SimpleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_big" />

            <View style="@style/HorizontalLine" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>