<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/SimpleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_big"
            android:singleLine="false"
            android:text="图片裁剪框架：\nhttps://github.com/ArthurHub/Android-Image-Cropper" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/padding_big">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="头像" />

            <cn.appoa.aframework.widget.image.SuperImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/height_normal"
                android:layout_height="@dimen/height_normal"
                android:scaleType="centerCrop"
                android:src="@drawable/default_avatar"
                app:super_image_view_shape_type="round" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_big"
                android:contentDescription="@string/content_description_image_view"
                android:src="@drawable/next_right" />

        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big"
                android:text="生日" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/SimpleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_normal"
                android:drawableRight="@drawable/next_right"
                android:gravity="center_vertical|right"
                android:hint="请选择生日"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big" />

        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big"
                android:text="星座" />

            <TextView
                android:id="@+id/tv_constellation"
                style="@style/SimpleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_normal"
                android:drawableRight="@drawable/next_right"
                android:gravity="center_vertical|right"
                android:hint="请选择星座"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big" />

        </LinearLayout>

        <View style="@style/HorizontalLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_normal"
            android:background="@color/colorWhite"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/SimpleTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big"
                android:text="区域" />

            <TextView
                android:id="@+id/tv_area"
                style="@style/SimpleTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/padding_normal"
                android:drawableRight="@drawable/next_right"
                android:gravity="center_vertical|right"
                android:hint="请选择区域"
                android:paddingLeft="@dimen/padding_big"
                android:paddingRight="@dimen/padding_big" />

        </LinearLayout>

        <View style="@style/HorizontalLine" />

    </LinearLayout>

</ScrollView>